@model ProductCat.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="CategoryId" class="form-control" asp-items="@((SelectList)ViewData["Categories"])">
                        <option value="">-- Select Category --</option>
                    </select>
                    <div class="input-group-append">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-list"></i> View Categories
                        </a>
                    </div>
                </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}